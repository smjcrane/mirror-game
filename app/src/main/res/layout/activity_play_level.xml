<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.cam.sc989.mirrors.ActivityPlayLevel">

    <RelativeLayout
        android:layout_margin="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:background="@color/colorPrimary"
            android:id="@+id/grid"
            android:gravity="center"
            android:scrollbars="none"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
        </GridLayout>

        <uk.ac.cam.sc989.mirrors.LineAnimatorView
            android:id="@+id/laser"
            android:layout_alignLeft="@+id/grid"
            android:layout_alignRight="@+id/grid"
            android:layout_alignTop="@+id/grid"
            android:layout_alignBottom="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
